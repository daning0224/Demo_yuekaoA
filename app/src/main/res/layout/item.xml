<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_iamge"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_loupan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="7"
            android:singleLine="true"
            android:text="潮白河孔雀城盛景色优美"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_region_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_loupan_name"
            android:layout_marginTop="5dp"
            android:text="燕郊 - 燕郊"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_tvprice_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_loupan_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_region_title"
            android:text="42000元/m2"
            android:textColor="#ff0000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_region_title"
            android:layout_marginTop="5dp"
            android:text="六环以外,南北通透,学校,银行,医院"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_sale_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tags"
            android:layout_marginTop="5dp"
            android:text="期房"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>